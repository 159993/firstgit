<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzti.mapper.VisiterMapper">
    <!--留着以后用  -->

    <select id="selectList" parameterType="java.util.HashMap"
            resultType="com.zzti.pojo.Visiter">

        SELECT * FROM visiter
        <where>
            <if test="visiterName != null">
                name LIKE concat('%',#{visiterName},'%')
            </if>
        </where>
        <if test="account != null">
            and account LIKE concat('%',#{account},'%')
        </if>
        <if test="limit != null and page !=null">
            LIMIT #{page},#{limit}
        </if>
    </select>
    <update id="updateById" parameterType="java.lang.Integer">

    UPDATE `visiter`
    <set>
        <if test="name !=null">
            name = ${name}
        </if>
        <if test="account !=null">
            account = ${account}
        </if>
        <if test="password !=null">
            password = ${password}
        </if>
        <if test="age !=null">
            age = ${age}
        </if>
        <if test="sex !=null">
            sex = ${sex}
        </if>
        <if test="comment !=null">
            comment = ${comment}
        </if>
        <if test="photo !=null">
            photo = ${photo}
        </if>
        <if test="name !=null">
            create_time = create_time
        </if>
        <if test="update_time !=null">
            update_time = now()
        </if>
        <if test="del !=null">
            del = ${del}
        </if>

    </set>
    where id = ${id}

    </update>

</mapper>